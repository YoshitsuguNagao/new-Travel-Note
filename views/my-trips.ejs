<div class="my-trips-title">
  <h2>My trips</h2>
</div>

<ul class="trip-list">
  <li>
    <p class="city-name">City</p>
    <div class="trip-date-price">
      <p class="trip-dates">Trip Dates</p>
      <p class="trip-price">Cost</p>
    </div>
  </li>
  <% trips.forEach(trip => { %>
    <a href="/trip/my-trips/<%= trip.id %>">
      <li>
        <div class="city-name">
          <p><%= trip.flight.cityFrom %></p>
          <p><%= trip.city %></p>
        </div>
        <div class="trip-date-price">
          <div class="trip-dates">
            <p><%= trip.departureDate %></p>
            <p><%= trip.returnDate %></p>
          </div>
          <div class="trip-price">
            <% const total = trip.cost.flightCost + trip.cost.accommodationCost%>
            <p>â‚¬ <%= total %></p>
          </div>
        </div>
      </li>
    </a>
  <% }); %>
</ul>

<div class=home-btn>
  <a href="/home"><img src="/images/home.png" alt="home button"></a>
</div>
